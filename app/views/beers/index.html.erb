
<h1>Listing beers</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery%></td>
        <td><%= link_to 'Edit', edit_beer_path(beer), class:"btn btn-warning" if current_user %></td>
        <td><%= link_to 'Destroy' , beer, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }  if current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:"btn btn-success" %> </br>
<%= link_to 'List of breweries', breweries_path, class:"btn btn-info" %>
